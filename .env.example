# Trailblazer Analytics Environment Variables
# Copy this file to .env and fill in your actual values

# Newsletter Service Configuration
# Choose one: beehiiv, mailchimp, convertkit, buttondown
NEWSLETTER_PROVIDER=beehiiv

# Beehiiv Configuration
BEEHIIV_API_KEY=your_beehiiv_api_key_here
BEEHIIV_PUBLICATION_ID=your_publication_id_here

# Mailchimp Configuration
MAILCHIMP_API_KEY=your_mailchimp_api_key_here
MAILCHIMP_LIST_ID=your_list_id_here

# ConvertKit Configuration
CONVERTKIT_API_KEY=your_convertkit_api_key_here
CONVERTKIT_FORM_ID=your_form_id_here

# Buttondown Configuration
BUTTONDOWN_API_KEY=your_buttondown_api_key_here

# Contact Form Configuration
# Choose one: resend, sendgrid, mailgun, nodemailer
EMAIL_PROVIDER=resend
CONTACT_EMAIL=hello@trailblazer-analytics.com

# Resend Configuration (recommended)
RESEND_API_KEY=your_resend_api_key_here

# SendGrid Configuration
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@trailblazer-analytics.com

# Mailgun Configuration
MAILGUN_API_KEY=your_mailgun_api_key_here
MAILGUN_DOMAIN=your_mailgun_domain.com

# Analytics Configuration
PLAUSIBLE_DOMAIN=trailblazer-analytics.com

# Download Tracking & Analytics
ANALYTICS_API_KEY=your_analytics_api_key_here
GA4_MEASUREMENT_ID=your_ga4_measurement_id_here

# Medium RSS Configuration
MEDIUM_USERNAME=alexandertrailblazer
MEDIUM_RSS_URL=https://medium.com/feed/@alex.nykolaiszyn

# Podcast Integration
SPOTIFY_SHOW_ID=your_spotify_show_id
APPLE_PODCASTS_ID=your_apple_podcasts_id
GOOGLE_PODCASTS_URL=your_google_podcasts_url

# CDN & Asset Configuration
CDN_BASE_URL=https://cdn.trailblazeranalytics.com
DOWNLOADS_BASE_URL=https://downloads.trailblazeranalytics.com

# Security
RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# Social Media Links
LINKEDIN_PROFILE=https://linkedin.com/in/alexnyk
TWITTER_HANDLE=@alextrailblazer
MEDIUM_PROFILE=https://medium.com/@alex.nykolaiszyn

# Development Configuration
PUBLIC_SITE_URL=http://localhost:4325
PRODUCTION_URL=https://trailblazeranalytics.com
