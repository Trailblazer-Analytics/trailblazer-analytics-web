---
import { getCollection } from 'astro:content';
import Base from '../../layouts/Base.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.jsx';

const posts = await getCollection('blog');

// SEO meta data with structured data for blog collection
const seoData = {
  title: "Blog - Trailblazer Analytics",
  description: "Read our latest insights on data analytics, business intelligence, and digital transformation.",
  image: "/og-image-blog.png",
  schemaType: "CollectionPage",
  canonicalUrl: "/blog"
};
---

<Base {...seoData}>
  <Navbar />
  
  <main class="bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">Blog</h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Stay informed with our latest insights on data analytics, business intelligence, and digital transformation strategies.
        </p>
      </div>

      <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        {posts.map(post => (
          <article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
            <div class="p-6">
              <div class="flex items-center mb-4">
                <span class="bg-blue-100 text-blue-800 text-sm font-medium px-3 py-1 rounded-full">
                  Blog Post
                </span>
              </div>
              
              <h2 class="text-xl font-bold text-gray-900 mb-3">
                <a href={`/blog/${post.slug}`} class="hover:text-blue-600 transition-colors">
                  {post.data.title}
                </a>
              </h2>
              
              {post.data.description && (
                <p class="text-gray-600 mb-4 line-clamp-3">
                  {post.data.description}
                </p>
              )}
              
              <div class="flex items-center justify-between">
                {post.data.date && (
                  <time class="text-sm text-gray-500">
                    {new Date(post.data.date).toLocaleDateString('en-US', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric'
                    })}
                  </time>
                )}
                
                <a 
                  href={`/blog/${post.slug}`}
                  class="text-blue-600 hover:text-blue-800 font-medium text-sm transition-colors"
                >
                  Read More â†’
                </a>
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </main>

  <Footer />
</Base>
