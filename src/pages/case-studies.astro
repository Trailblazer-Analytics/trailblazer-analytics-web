---
import { getCollection } from 'astro:content';
import Base from '../layouts/Base.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.jsx';
import CaseStudyCard from '../components/CaseStudyCard.jsx';

const caseStudies = await getCollection('case-studies');

const seoData = {
  title: "Case Studies - Trailblazer Analytics",
  description: "Real-world business intelligence transformations and success stories. See how organizations achieve measurable results with data-driven strategies.",
  image: "/og-image-case-studies.png"
};
---

<Base {...seoData}>
  <Navbar />
  
  <!-- Header Section -->
  <section class="bg-gradient-to-r from-brandBlue to-blue-700 text-white py-20">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">Case Studies</h1>
        <p class="text-xl text-blue-100 mb-8">
          Real-world business intelligence transformations and measurable results from data-driven strategies.
        </p>
        <div class="flex flex-wrap justify-center gap-4 text-sm">
          <span class="bg-white/20 px-3 py-1 rounded-full">ROI Improvements</span>
          <span class="bg-white/20 px-3 py-1 rounded-full">Process Optimization</span>
          <span class="bg-white/20 px-3 py-1 rounded-full">Technology Modernization</span>
          <span class="bg-white/20 px-3 py-1 rounded-full">Cultural Change</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="py-12 bg-gray-50">
    <div class="container mx-auto px-6">
      <div class="grid md:grid-cols-4 gap-8 text-center">
        <div>
          <div class="text-3xl font-bold text-brandBlue mb-2">50+</div>
          <div class="text-gray-600">Successful Projects</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-brandGreen mb-2">$2M+</div>
          <div class="text-gray-600">Documented ROI</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-brandGold mb-2">80%</div>
          <div class="text-gray-600 text-sm">Avg. Time Savings</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-purple-600 mb-2">95%</div>
          <div class="text-gray-600">Client Satisfaction</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Case Studies Grid -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-6">
      <div class="max-w-6xl mx-auto">
        
        {caseStudies.length > 0 ? (
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {caseStudies.map((caseStudy, index) => (
              <CaseStudyCard 
                key={index}
                title={caseStudy.data.title}
                client={caseStudy.data.client}
                summary={caseStudy.data.summary}
                date={caseStudy.data.date}
                slug={caseStudy.slug}
              />
            ))}
          </div>
        ) : (
          <!-- Placeholder Content -->
          <div class="text-center py-12">
            <div class="text-6xl mb-6">ðŸ“Š</div>
            <h2 class="text-2xl font-bold mb-4">Case Studies Coming Soon</h2>
            <p class="text-gray-600 mb-8 max-w-2xl mx-auto">
              We're documenting real-world BI transformations and success stories. Check back soon for detailed case studies showcasing measurable results and best practices.
            </p>
            
            <!-- Preview Cards -->
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 mt-12">
              
              <div class="bg-gray-50 border border-gray-200 rounded-lg p-6 text-left">
                <div class="flex items-center justify-between mb-4">
                  <h3 class="font-semibold">Manufacturing BI Overhaul</h3>
                  <span class="text-xs bg-blue-100 text-blue-800 px-2 py-1 rounded">Q1 2025</span>
                </div>
                <p class="text-gray-600 text-sm mb-4">
                  Complete analytics transformation for a Fortune 500 manufacturer, reducing reporting time by 85% and improving decision-making speed.
                </p>
                <div class="text-xs text-gray-500">
                  <span class="font-medium">Impact:</span> $1.2M annual savings
                </div>
              </div>

              <div class="bg-gray-50 border border-gray-200 rounded-lg p-6 text-left">
                <div class="flex items-center justify-between mb-4">
                  <h3 class="font-semibold">Healthcare Data Integration</h3>
                  <span class="text-xs bg-green-100 text-green-800 px-2 py-1 rounded">Q1 2025</span>
                </div>
                <p class="text-gray-600 text-sm mb-4">
                  Unified patient data across multiple systems, enabling real-time insights and improving patient outcomes through predictive analytics.
                </p>
                <div class="text-xs text-gray-500">
                  <span class="font-medium">Impact:</span> 40% faster diagnosis
                </div>
              </div>

              <div class="bg-gray-50 border border-gray-200 rounded-lg p-6 text-left">
                <div class="flex items-center justify-between mb-4">
                  <h3 class="font-semibold">Retail Analytics Platform</h3>
                  <span class="text-xs bg-purple-100 text-purple-800 px-2 py-1 rounded">Q2 2025</span>
                </div>
                <p class="text-gray-600 text-sm mb-4">
                  Built comprehensive customer journey analytics, resulting in 25% increase in conversion rates and improved inventory management.
                </p>
                <div class="text-xs text-gray-500">
                  <span class="font-medium">Impact:</span> $800K revenue increase
                </div>
              </div>

            </div>
          </div>
        )}

      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-gray-900 text-white">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl font-bold mb-6">Ready to Write Your Success Story?</h2>
        <p class="text-xl text-gray-300 mb-8">
          Let's discuss how we can help transform your business intelligence capabilities and achieve measurable results.
        </p>
        <div class="space-y-4 sm:space-y-0 sm:space-x-4 sm:flex sm:justify-center">
          <a 
            href="/connect" 
            class="inline-block bg-brandBlue text-white px-8 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors"
          >
            Start Your Transformation
          </a>
          <a 
            href="/services" 
            class="inline-block border border-white text-white px-8 py-3 rounded-lg font-semibold hover:bg-white hover:text-gray-900 transition-colors"
          >
            View Our Services
          </a>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Base>
