---
import { getCollection } from 'astro:content';
import Base from '../layouts/Base.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.jsx';

const tools = await getCollection('tools');

// Filter featured tools
const featuredTools = tools.filter(tool => tool.data.featured);

// SEO meta data
const seoData = {
  title: "Analytics Tools & Software - Trailblazer Data Strategy Resources",
  description: "Explore powerful analytics tools, BI software recommendations, and strategic frameworks for trailblazers. Interactive calculators, assessment tools, and curated resources for data professionals. Find by topic!",
  image: "/og-image-tools.png"
};
---

<Base {...seoData}>
  <Navbar />
    <!-- Header Section -->
  <section class="bg-gradient-to-br from-gray-900 via-purple-900 to-blue-900 text-white py-20 relative overflow-hidden">
    <!-- Creative Background Elements -->
    <div class="absolute inset-0 opacity-20">
      <div class="absolute top-16 right-16 w-20 h-20 bg-brandGold rounded-full transform rotate-45 animate-pulse"></div>
      <div class="absolute bottom-16 left-16 w-16 h-16 bg-brandGreen rounded-full transform -rotate-12 animate-bounce"></div>
      <div class="absolute top-1/2 left-1/4 w-12 h-12 bg-orange-400 rounded-full transform rotate-45"></div>
    </div>
    
    <div class="container mx-auto px-6 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <div class="flex items-center justify-center gap-4 mb-6">
          <span class="text-5xl">üõ†Ô∏è</span>
          <h1 class="text-5xl md:text-6xl font-bold">
            <span class="text-brandGold">Trailblazer</span> Analytics Tools
          </h1>
        </div>
        <p class="text-xl md:text-2xl text-gray-300 mb-8">
          Powerful tools and frameworks to accelerate your data analytics journey. Interactive calculators, assessment frameworks, and strategic planning tools - all designed for trailblazers.
        </p>
        <div class="flex flex-wrap justify-center gap-4 mb-8">
          <span class="bg-brandGreen/20 text-white px-4 py-2 rounded-full">Interactive Tools</span>
          <span class="bg-brandGold/20 text-brandGold px-4 py-2 rounded-full">Calculators</span>
          <span class="bg-blue-500/20 text-blue-400 px-4 py-2 rounded-full">Templates</span>
          <span class="bg-purple-500/20 text-purple-400 px-4 py-2 rounded-full">Frameworks</span>
        </div>
        
        <!-- Quick Topic Navigation -->
        <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6 border border-white/20">
          <p class="text-brandGold font-semibold mb-4">üéØ Find Tools by Topic</p>
          <div class="flex flex-wrap justify-center gap-2">
            <a href="/tags/analytics-tools" class="bg-gradient-to-r from-blue-500 to-purple-600 text-white px-3 py-2 rounded-full text-sm hover:scale-105 transition-all duration-300">Analytics Tools</a>
            <a href="/tags/calculators" class="bg-gradient-to-r from-green-500 to-blue-600 text-white px-3 py-2 rounded-full text-sm hover:scale-105 transition-all duration-300">Calculators</a>
            <a href="/tags/frameworks" class="bg-gradient-to-r from-purple-500 to-pink-600 text-white px-3 py-2 rounded-full text-sm hover:scale-105 transition-all duration-300">Frameworks</a>
            <a href="/tags/assessment" class="bg-gradient-to-r from-orange-500 to-red-600 text-white px-3 py-2 rounded-full text-sm hover:scale-105 transition-all duration-300">Assessment</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Tools -->
  {featuredTools.length > 0 && (
    <section class="py-16 bg-white">
      <div class="container mx-auto px-6">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">Featured Tools</h2>
          
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
            {featuredTools.map((tool) => (
              <div class="bg-gradient-to-br from-brandGreen to-green-600 rounded-2xl p-8 text-white">
                <div class="flex items-start justify-between mb-4">
                  <div>
                    <span class="bg-brandGold text-black px-3 py-1 rounded-full text-sm font-semibold">Featured</span>
                    <h3 class="text-2xl font-bold mt-4 mb-2">{tool.data.title}</h3>
                    <p class="text-sm opacity-75 mb-2">{tool.data.category || 'Analytics Tool'}</p>
                  </div>
                  {tool.data.featured && (
                    <div class="text-right">
                      <div class="flex items-center gap-1 mb-1">
                        <svg class="w-4 h-4 text-brandGold" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                        </svg>
                        <span class="text-sm font-semibold">4.9</span>
                      </div>
                      <p class="text-xs opacity-75">Popular</p>
                    </div>
                  )}
                </div>
                <p class="text-lg mb-6 opacity-90">{tool.data.description}</p>
                <a 
                  href={`/tools/${tool.slug}`}
                  class="inline-block bg-white text-brandGreen px-6 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors"
                >
                  Learn More
                </a>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>  )}

  <!-- Cross-link to Tags Experience -->
  <section class="py-16 bg-gradient-to-br from-slate-900 via-purple-900 to-blue-900 text-white relative overflow-hidden">
    <!-- Background elements -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-20 left-20 w-16 h-16 bg-brandGold rounded-full transform rotate-45"></div>
      <div class="absolute bottom-10 right-10 w-20 h-20 bg-brandGreen rounded-full transform -rotate-12"></div>
      <div class="absolute top-1/2 right-1/4 w-12 h-12 bg-purple-400 rounded-full transform rotate-45"></div>
    </div>
    
    <div class="container mx-auto px-6 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <div class="flex items-center justify-center gap-4 mb-6">
          <span class="text-4xl">üõ†Ô∏è</span>
          <h2 class="text-4xl md:text-5xl font-black">
            <span class="inline-block transform -rotate-1 bg-brandGold px-6 py-3 text-gray-900 rounded-xl shadow-2xl">
              Browse by Topic
            </span>
          </h2>
          <span class="bg-yellow-400 text-black px-3 py-2 rounded-full text-sm font-bold transform rotate-12">HOT</span>
        </div>
        
        <p class="text-xl md:text-2xl text-gray-300 mb-8 leading-relaxed">
          Find tools, insights, and resources organized by topic.
          <br />
          <span class="text-brandGold font-semibold">
            Tools are just the beginning - explore the full ecosystem.
          </span>
        </p>
        
        <!-- Tool-focused topic bubbles -->
        <div class="flex flex-wrap justify-center gap-3 mb-8">
          <span class="bg-gradient-to-r from-purple-500 to-pink-600 text-white px-4 py-2 rounded-full transform hover:scale-110 transition-all duration-300">üõ†Ô∏è Tools</span>
          <span class="bg-gradient-to-r from-blue-500 to-purple-600 text-white px-4 py-2 rounded-full transform hover:scale-110 transition-all duration-300">üìä Analytics</span>
          <span class="bg-gradient-to-r from-green-400 to-blue-500 text-white px-4 py-2 rounded-full transform hover:scale-110 transition-all duration-300">‚ö° PowerBI</span>
          <span class="bg-gradient-to-r from-orange-400 to-red-500 text-white px-4 py-2 rounded-full transform hover:scale-110 transition-all duration-300">üêç Python</span>
          <span class="bg-gradient-to-r from-indigo-500 to-purple-600 text-white px-4 py-2 rounded-full transform hover:scale-110 transition-all duration-300">üóÉÔ∏è SQL</span>
        </div>
        
        <a 
          href="/tags" 
          class="inline-flex items-center gap-3 bg-brandGold hover:bg-yellow-600 text-black font-bold px-8 py-4 rounded-xl transition-all duration-300 transform hover:scale-105 hover:shadow-2xl text-lg"
        >
          Explore All Topics
          <span class="transform rotate-12 text-xl">‚Üí</span>
        </a>
      </div>
    </div>
  </section>

  <!-- All Tools Grid -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-6">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">All Tools</h2>
          <p class="text-lg text-gray-600">Professional-grade tools and resources for data practitioners</p>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {tools.map((tool) => (
            <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
              <div class="h-48 bg-gradient-to-br from-brandGreen to-green-600 flex items-center justify-center">
                <div class="text-center text-white">
                  <div class="w-16 h-16 bg-white/20 rounded-lg flex items-center justify-center mx-auto mb-2">
                    <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"></path>
                    </svg>
                  </div>
                  <span class="text-sm font-medium">{tool.data.type || 'Tool'}</span>
                </div>
              </div>
              
              <div class="p-6">
                <div class="flex justify-between items-start mb-3">
                  <span class="bg-brandGreen/10 text-brandGreen px-2 py-1 rounded text-sm font-medium">
                    {tool.data.category || 'Analytics'}
                  </span>
                  {tool.data.price && (
                    <span class="text-lg font-bold text-gray-900">{tool.data.price}</span>
                  )}
                  {!tool.data.price && tool.data.premium && (
                    <span class="text-lg font-bold text-brandGold">Premium</span>
                  )}
                  {!tool.data.price && !tool.data.premium && tool.data.gated && (
                    <span class="text-sm font-bold text-brandGreen">Free*</span>
                  )}
                  {!tool.data.gated && (
                    <span class="text-sm font-bold text-blue-600">Free</span>
                  )}
                </div>
                
                <h3 class="text-xl font-bold text-gray-900 mb-2">{tool.data.title}</h3>
                <p class="text-gray-600 mb-4">{tool.data.description}</p>
                
                {tool.data.features && (
                  <div class="flex flex-wrap gap-2 mb-4">
                    {tool.data.features.slice(0, 3).map(feature => (
                      <span class="bg-gray-100 text-gray-600 px-2 py-1 rounded text-xs">{feature}</span>
                    ))}
                  </div>
                )}
                
                <div class="flex gap-2">
                  {/* Gating Logic for Primary Button */}
                  {!tool.data.gated ? (
                    /* Free Access */
                    <a 
                      href={`/tools/${tool.slug}`}
                      class="flex-1 bg-brandGreen hover:bg-green-700 text-white font-semibold py-2 px-4 rounded-lg transition-colors text-sm text-center"
                    >
                      Access Tool
                    </a>
                  ) : tool.data.premium && tool.data.purchaseUrl ? (
                    /* External Purchase */
                    <a 
                      href={tool.data.purchaseUrl}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="flex-1 bg-brandGold hover:bg-yellow-600 text-black font-semibold py-2 px-4 rounded-lg transition-colors text-sm text-center"
                    >
                      {tool.data.price ? `Buy ${tool.data.price}` : 'Buy Now'}
                    </a>
                  ) : (
                    /* Newsletter Gate */
                    <a 
                      href={`/tools/${tool.slug}`}
                      class="flex-1 bg-brandGreen hover:bg-green-700 text-white font-semibold py-2 px-4 rounded-lg transition-colors text-sm text-center"
                    >
                      Get Free Access
                    </a>
                  )}
                  
                  {/* Demo/Preview Button */}
                  {tool.data.demoUrl && (
                    <a 
                      href={tool.data.demoUrl} 
                      target="_blank"
                      rel="noopener noreferrer"
                      class="border-2 border-brandGreen text-brandGreen px-4 py-2 rounded-lg hover:bg-brandGreen hover:text-white transition-colors text-sm"
                    >
                      Demo
                    </a>
                  )}
                  
                  {/* Learn More for Premium without Demo */}
                  {!tool.data.demoUrl && tool.data.gated && (
                    <a 
                      href={`/tools/${tool.slug}`} 
                      class="border-2 border-gray-300 text-gray-600 px-4 py-2 rounded-lg hover:bg-gray-100 transition-colors text-sm"
                    >
                      Details
                    </a>
                  )}
                </div>
                
                {/* Access Notice */}
                {tool.data.gated && !tool.data.premium && (
                  <p class="text-xs text-gray-500 mt-2">
                    * Free with newsletter signup
                  </p>
                )}
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Coming Soon / Setup Instructions -->
  {tools.length === 0 && (
    <section class="py-16 bg-white">
      <div class="container mx-auto px-6">
        <div class="max-w-4xl mx-auto">
          <div class="bg-gray-50 rounded-2xl p-12 text-center mb-12">
            <div class="w-20 h-20 bg-brandGreen/10 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-10 h-10 text-brandGreen" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4"></path>
              </svg>
            </div>
            <h2 class="text-3xl font-bold text-gray-900 mb-4">Premium Tools Coming Soon!</h2>
            <p class="text-lg text-gray-600 mb-8">
              We're building an amazing collection of analytics tools, templates, and frameworks. Professional-grade resources to accelerate your data journey.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center mb-8">
              <a href="/contact" class="bg-brandGreen text-white px-6 py-3 rounded-lg font-semibold hover:bg-green-700 transition-colors">
                Request a Tool
              </a>
              <a href="/articles" class="border-2 border-brandGreen text-brandGreen px-6 py-3 rounded-lg font-semibold hover:bg-brandGreen hover:text-white transition-colors">
                Read Articles
              </a>
            </div>
          </div>
          
          <!-- Setup Instructions for Admins -->
          <div class="bg-blue-50 border border-blue-200 rounded-2xl p-8">
            <div class="flex items-start gap-4">
              <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div class="flex-1">
                <h3 class="text-xl font-bold text-blue-900 mb-3">For Site Administrators</h3>
                <p class="text-blue-800 mb-4">
                  Ready to add premium tools? Follow our comprehensive setup guide to create gated content with newsletter signups or external purchase options.
                </p>
                <div class="bg-white rounded-lg p-4 mb-4">
                  <h4 class="font-semibold text-blue-900 mb-2">Quick Start:</h4>
                  <ol class="text-sm text-blue-800 space-y-1">
                    <li>1. Create tool file in <code class="bg-blue-100 px-2 py-1 rounded">src/content/tools/</code></li>
                    <li>2. Add frontmatter with gating options (<code class="bg-blue-100 px-2 py-1 rounded">gated</code>, <code class="bg-blue-100 px-2 py-1 rounded">premium</code>, <code class="bg-blue-100 px-2 py-1 rounded">gatewayType</code>)</li>
                    <li>3. Configure newsletter or purchase integration</li>
                    <li>4. Test the tool access flow</li>
                  </ol>
                </div>
                <a 
                  href="https://github.com/AlexMercer-MA/trailblazer-analytics-devkit/blob/main/PREMIUM_TOOLS_SETUP_GUIDE.md" 
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 bg-blue-600 text-white px-4 py-2 rounded-lg font-semibold hover:bg-blue-700 transition-colors text-sm"
                >
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                  </svg>
                  View Setup Guide
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Custom Solutions -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl font-bold text-gray-900 mb-8">Need Something Custom?</h2>
        <div class="bg-gray-50 rounded-2xl p-8">
          <div class="w-16 h-16 bg-brandGreen rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-gray-900 mb-4">Custom Tool Development</h3>
          <p class="text-lg text-gray-600 mb-6">
            We create bespoke analytics tools, dashboards, and frameworks tailored to your specific industry and organizational needs.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/contact" class="bg-brandGreen text-white px-6 py-3 rounded-lg font-semibold hover:bg-green-700 transition-colors">
              Discuss Your Needs
            </a>
            <a href="/downloads" class="border-2 border-brandGreen text-brandGreen px-6 py-3 rounded-lg font-semibold hover:bg-brandGreen hover:text-white transition-colors">
              View Portfolio
            </a>
          </div>
        </div>
      </div>
    </section>
  <Footer />
</Base>
