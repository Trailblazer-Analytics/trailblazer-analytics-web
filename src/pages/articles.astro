---
import { getCollection } from 'astro:content';
import Base from '../layouts/Base.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.jsx';

// Fetch all articles and sort by date
const allArticles = await getCollection('articles');
const sortedArticles = allArticles.sort((a, b) => {
  const dateA = new Date(a.data.date || 0);
  const dateB = new Date(b.data.date || 0);
  return dateB.getTime() - dateA.getTime(); // Newest first
});

// Extract featured articles for special treatment
const featuredArticles = sortedArticles.filter(article => article.data.featured);
const regularArticles = sortedArticles.filter(article => !article.data.featured);

// Get popular tags for the sidebar
const tagCounts: Record<string, number> = {};
allArticles.forEach(article => {
  article.data.tags?.forEach((tag: string) => {
    tagCounts[tag] = (tagCounts[tag] || 0) + 1;
  });
});

const popularTags = Object.entries(tagCounts)
  .sort(([,a], [,b]) => b - a)
  .slice(0, 10) // Top 10 tags
  .map(([tag, count]) => ({ tag, count }));

// Format date helper
function formatDate(dateString) {
  if (!dateString) return 'Coming Soon';
  const date = new Date(dateString);
  return date.toLocaleDateString('en-US', { 
    year: 'numeric', 
    month: 'long', 
    day: 'numeric' 
  });
}

// Format reading time helper
function formatReadingTime(readingTime) {
  if (!readingTime) return null;
  if (typeof readingTime === 'string') return readingTime;
  return `${readingTime} min read`;
}
---

<Base 
  title="Articles | Trailblazer Analytics"
  description="Explore insights from my Medium publication - analytics thought leadership, data strategy guides, and industry perspectives that shape the future of business intelligence."
>
  <Navbar />
  
  <main class="min-h-screen bg-softBlack text-mutedWhite">
    <!-- Hero Section -->
    <section class="py-16 px-6 bg-gradient-to-br from-trailblazerGreen to-deepGraphGreen">
      <div class="container mx-auto text-center">
        <h1 class="text-4xl md:text-6xl font-bold mb-6 text-mutedWhite">
          📰 Articles
        </h1>
        <p class="text-xl md:text-2xl text-mutedWhite/90 max-w-3xl mx-auto mb-8">
          Medium-backed insights on analytics, data strategy, and industry trends. 
          Thought leadership from the front lines of business intelligence.
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <span class="bg-goldAccent text-softBlack px-4 py-2 rounded-full font-semibold">
            {allArticles.length} Articles
          </span>
          <span class="bg-mutedWhite/20 text-mutedWhite px-4 py-2 rounded-full">
            Medium Integration
          </span>
        </div>
      </div>
    </section>

    <div class="container mx-auto py-12 px-6">
      <div class="grid md:grid-cols-3 gap-8">
        <!-- Main Content -->
        <div class="md:col-span-2">
          
          {featuredArticles.length > 0 && (
            <section class="mb-12">
              <h2 class="text-3xl font-bold mb-8 text-goldAccent">Featured Articles</h2>
              <div class="grid gap-8">
                {featuredArticles.map(article => (
                  <article class="bg-deepGraphGreen rounded-lg p-6 border border-deepGraphLine hover:border-goldAccent/50 transition-all group">
                    <div class="flex flex-col md:flex-row gap-6">
                      {article.data.image && (
                        <div class="md:w-1/3">
                          <img 
                            src={article.data.image} 
                            alt={article.data.title}
                            class="w-full h-48 object-cover rounded-lg"
                            loading="lazy"
                          />
                        </div>
                      )}
                      <div class={article.data.image ? 'md:w-2/3' : 'w-full'}>
                        <div class="flex flex-wrap gap-2 mb-3">
                          {article.data.tags?.slice(0, 3).map(tag => (
                            <span class="bg-goldAccent/20 text-goldAccent px-2 py-1 rounded-full text-sm">
                              {tag}
                            </span>
                          ))}
                        </div>
                        <h3 class="text-2xl font-bold mb-3 group-hover:text-goldAccent transition-colors">
                          <a href={`/articles/${article.slug}`}>
                            {article.data.title}
                          </a>
                        </h3>
                        {article.data.description && (
                          <p class="text-mutedWhite/80 mb-4 line-clamp-3">
                            {article.data.description}
                          </p>
                        )}
                        <div class="flex items-center gap-4 text-sm text-mutedWhite/60">
                          <span>{formatDate(article.data.date)}</span>
                          {article.data.readingTime && (
                            <span>• {formatReadingTime(article.data.readingTime)}</span>
                          )}
                          {article.data.mediumUrl && (
                            <a href={article.data.mediumUrl} target="_blank" rel="noopener noreferrer" 
                               class="text-goldAccent hover:text-goldAccent/80 transition-colors">
                              • Read on Medium
                            </a>
                          )}
                        </div>
                      </div>
                    </div>
                  </article>
                ))}
              </div>
            </section>
          )}

          {/* Regular Articles */}
          <section>
            <h2 class="text-3xl font-bold mb-8 text-goldAccent">
              {featuredArticles.length > 0 ? 'All Articles' : 'Latest Articles'}
            </h2>
            <div class="grid gap-6">
              {regularArticles.map(article => (
                <article class="bg-deepGraphGreen rounded-lg p-6 border border-deepGraphLine hover:border-goldAccent/50 transition-all group">
                  <div class="flex flex-col sm:flex-row gap-4">
                    {article.data.image && (
                      <div class="sm:w-1/4">
                        <img 
                          src={article.data.image} 
                          alt={article.data.title}
                          class="w-full h-32 object-cover rounded-lg"
                          loading="lazy"
                        />
                      </div>
                    )}
                    <div class={article.data.image ? 'sm:w-3/4' : 'w-full'}>
                      <div class="flex flex-wrap gap-2 mb-2">
                        {article.data.tags?.slice(0, 2).map(tag => (
                          <span class="bg-goldAccent/20 text-goldAccent px-2 py-1 rounded-full text-xs">
                            {tag}
                          </span>
                        ))}
                      </div>
                      <h3 class="text-xl font-bold mb-2 group-hover:text-goldAccent transition-colors">
                        <a href={`/articles/${article.slug}`}>
                          {article.data.title}
                        </a>
                      </h3>
                      {article.data.description && (
                        <p class="text-mutedWhite/80 mb-3 line-clamp-2 text-sm">
                          {article.data.description}
                        </p>
                      )}
                      <div class="flex items-center gap-3 text-xs text-mutedWhite/60">
                        <span>{formatDate(article.data.date)}</span>
                        {article.data.readingTime && (
                          <span>• {formatReadingTime(article.data.readingTime)}</span>
                        )}
                        {article.data.mediumUrl && (
                          <a href={article.data.mediumUrl} target="_blank" rel="noopener noreferrer" 
                             class="text-goldAccent hover:text-goldAccent/80 transition-colors">
                            • Medium
                          </a>
                        )}
                      </div>
                    </div>
                  </div>
                </article>
              ))}
            </div>

            {allArticles.length === 0 && (
              <div class="text-center py-12">
                <div class="text-6xl mb-4">📰</div>
                <h3 class="text-2xl font-bold mb-4">Articles Coming Soon</h3>
                <p class="text-mutedWhite/80 max-w-md mx-auto">
                  I'm working on integrating my Medium articles. Check back soon for insights on analytics, data strategy, and industry trends.
                </p>
              </div>
            )}
          </section>
        </div>

        <!-- Sidebar -->
        <aside class="space-y-6">
          <!-- Newsletter CTA -->
          <div class="bg-deepGraphGreen rounded-lg p-6 border border-deepGraphLine">
            <h3 class="text-xl font-bold mb-3 text-goldAccent">Stay Updated</h3>
            <p class="text-sm text-mutedWhite/80 mb-4">
              Get notified when new articles are published. No spam, just quality insights.
            </p>
            <a href="/connect" 
               class="block w-full bg-goldAccent text-softBlack text-center py-2 rounded-lg font-semibold hover:bg-goldAccent/80 transition-colors">
              Subscribe
            </a>
          </div>

          <!-- Popular Tags -->
          {popularTags.length > 0 && (
            <div class="bg-deepGraphGreen rounded-lg p-6 border border-deepGraphLine">
              <h3 class="text-xl font-bold mb-4 text-goldAccent">Popular Topics</h3>
              <div class="flex flex-wrap gap-2">
                {popularTags.map(({ tag, count }) => (
                  <a href={`/tags/${tag.toLowerCase().replace(/\s+/g, '-')}`} 
                     class="bg-mutedWhite/10 hover:bg-goldAccent/20 text-mutedWhite hover:text-goldAccent px-3 py-1 rounded-full text-sm transition-colors">
                    {tag} ({count})
                  </a>
                ))}
              </div>
            </div>
          )}

          <!-- Quick Links -->
          <div class="bg-deepGraphGreen rounded-lg p-6 border border-deepGraphLine">
            <h3 class="text-xl font-bold mb-4 text-goldAccent">More Content</h3>
            <div class="space-y-3">
              <a href="/blog" class="flex items-center gap-3 text-mutedWhite hover:text-goldAccent transition-colors">
                <span>✍️</span> Blog Posts
              </a>
              <a href="/case-studies" class="flex items-center gap-3 text-mutedWhite hover:text-goldAccent transition-colors">
                <span>🏆</span> Success Stories
              </a>
              <a href="/tech-notes" class="flex items-center gap-3 text-mutedWhite hover:text-goldAccent transition-colors">
                <span>⚡</span> Pro Tips
              </a>
              <a href="/podcast" class="flex items-center gap-3 text-mutedWhite hover:text-goldAccent transition-colors">
                <span>🎙️</span> Podcast
              </a>
            </div>
          </div>
        </aside>
      </div>
    </div>
  </main>

  <Footer />
</Base>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
