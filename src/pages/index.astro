---
import Base from '../layouts/Base.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.jsx';
import OptimizedImage from '../components/OptimizedImage.astro';
import { getCollection } from 'astro:content';
import CaseStudyCard from '../components/CaseStudyCard.jsx';
import NewsletterSignup from '../components/NewsletterSignup.astro';
import SocialShare from '../components/SocialShare.astro';

// Get blog content to showcase instead of case studies
const blogPosts = await getCollection('blog');

// SEO meta data
const seoData = {
  title: "Trailblazer Analytics - Where Data Trailblazers Unite",
  description: "Join the personal analytics journey! Creative insights, practical tools, and strategic frameworks that actually work. Welcome fellow trailblazers to the adventure.",
  image: "/og-image-home.png"
};
---

<Base {...seoData}>
  <Navbar />  <!-- Hero Section - Simplified & Professional -->
  <section class="bg-gradient-to-br from-ivorySand via-mutedWhite to-ivorySand text-softBlack py-20 md:py-32">
    <div class="container mx-auto px-6">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        
        <!-- Left Side - Text Content -->
        <div class="text-center lg:text-left">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-black mb-6 tracking-tight text-deepGraphLine">
            Where Analytics Meets <span class="text-goldAccent">Innovation</span> ÔøΩ
          </h1>
          <p class="text-lg md:text-xl mb-8 text-deepGraphLine max-w-xl mx-auto lg:mx-0 leading-relaxed">
            15+ years of turning data chaos into gold ‚ú® Join the journey where boring dashboards come to die and insights actually spark joy.
          </p>
          
          <!-- Call to Action Buttons -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
            <a href="/blog" class="bg-goldAccent hover:bg-goldAccent/80 text-softBlack font-bold py-3 px-8 rounded-lg transition-transform transform hover:scale-105 shadow-lg">
              üöÄ Join the Journey
            </a>
            <a href="/tags" class="border-2 border-goldAccent text-goldAccent hover:bg-goldAccent hover:text-softBlack font-bold py-3 px-8 rounded-lg transition-all flex items-center gap-2">
              <span>üè∑Ô∏è Explore Topics</span>
              <span class="bg-goldAccent text-softBlack px-2 py-1 rounded-full text-xs font-bold transform -rotate-12">HOT</span>
            </a>
          </div>
        </div>
        
        <!-- Right Side - Headshot -->
        <div class="flex justify-center lg:justify-end">
          <div class="relative w-64 h-64 md:w-80 md:h-80">
            <OptimizedImage 
              src="/images/alexander-headshot-hero.png" 
              alt="Alexander Nikolaiszyn" 
              width={320}
              height={320}
              class="w-full h-full object-cover rounded-full shadow-2xl border-4 border-goldAccent/50"
              priority={true}
              format="webp"
            />
            <div class="absolute -bottom-4 -right-4 bg-trailblazerGreen text-mutedWhite px-4 py-2 rounded-lg font-semibold text-sm shadow-lg">
              Analytics Rebel ‚ö°
            </div>
          </div>
        </div>

      </div>
    </div>
  </section>  <!-- Value Proposition Section - Trailblazer Edition -->
  <section class="py-20 bg-ivorySand relative overflow-hidden">
    <!-- Background elements -->
    <div class="absolute top-0 right-0 w-64 h-64 bg-gradient-to-bl from-goldAccent/10 to-transparent rounded-full transform translate-x-32 -translate-y-32"></div>
    <div class="absolute bottom-0 left-0 w-48 h-48 bg-gradient-to-tr from-trailblazerGreen/10 to-transparent rounded-full transform -translate-x-24 translate-y-24"></div>
    
    <div class="container mx-auto px-6 relative z-10">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-black text-softBlack mb-4">
          <span class="bg-gradient-to-r from-purple-600 to-pink-600 bg-clip-text text-transparent">
            Your Analytics Trailblazing HQ
          </span>
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
          Where data professionals come to escape corporate boredom and build something amazing.
          <br />
          <span class="text-purple-600 font-semibold">No spreadsheet nightmares here!</span>
        </p>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
          <div class="p-6">
            <div class="w-16 h-16 bg-brandGreen rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">In-Depth Articles</h3>
            <p class="text-gray-600 mb-4">Weekly insights on data strategy, analytics trends, and career advancement from a practicing professional.</p>
            <a href="/insights" class="text-brandGreen font-semibold hover:text-green-700">Read Articles ‚Üí</a>
          </div>
        </div>
        
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
          <div class="p-6">
            <div class="w-16 h-16 bg-brandGreen rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Practical Tools</h3>
            <p class="text-gray-600 mb-4">Ready-to-use calculators, frameworks, and templates that solve real analytics challenges.</p>
            <a href="/tools" class="text-brandGreen font-semibold hover:text-green-700">Explore Tools ‚Üí</a>
          </div>
        </div>
        
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
          <div class="p-6">
            <div class="w-16 h-16 bg-brandGreen rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Podcast Discussions</h3>
            <p class="text-gray-600 mb-4">Deep conversations with data leaders about trends, challenges, and career insights.</p>
            <a href="/podcast" class="text-brandGreen font-semibold hover:text-green-700">Listen Now ‚Üí</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Content Section -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">Latest Insights & Resources</h2>
        <p class="text-xl text-gray-600 mb-6">Stay ahead with expert analysis, tools, and strategies.</p>
        
        <!-- Random Insight Button -->
        <button 
          id="random-insight-btn"
          class="bg-gradient-to-r from-purple-500 to-pink-500 hover:from-purple-600 hover:to-pink-600 text-white font-bold py-3 px-6 rounded-full transition-all duration-300 transform hover:scale-105 shadow-lg flex items-center gap-2 mx-auto"
        >
          üé≤ Surprise Me with an Insight!
        </button>
      </div>
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
          <div class="p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-2">Insights</h3>
            <p class="text-gray-600 mb-4">Expert analysis on data trends, technology, and business strategy.</p>
            <a href="/insights" class="text-brandGreen font-semibold hover:text-green-700">Explore Insights ‚Üí</a>
          </div>
        </div>
        
        <!-- FEATURED: Amazing Tags Page -->
        <div class="bg-gradient-to-br from-blue-500 to-purple-600 rounded-xl shadow-lg overflow-hidden text-white transform hover:scale-105 transition-all duration-300">
          <div class="p-6">
            <div class="flex items-center gap-3 mb-4">
              <span class="text-3xl">üè∑Ô∏è</span>
              <h3 class="text-xl font-bold">Explore Topics</h3>
              <span class="bg-yellow-400 text-black px-2 py-1 rounded-full text-xs font-bold">HOT</span>
            </div>
            <p class="mb-4 opacity-90">Navigate the beautiful chaos of data insights, one tag at a time. Our most creative discovery experience!</p>
            <a href="/tags" class="inline-flex items-center gap-2 bg-white/20 hover:bg-white/30 px-4 py-2 rounded-lg font-semibold transition-colors">
              Dive Into Topics 
              <span class="transform rotate-12">‚Üí</span>
            </a>
          </div>
        </div>
        
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
          <div class="p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-2">Podcast</h3>
            <p class="text-gray-600 mb-4">Conversations with data leaders and industry innovators.</p>
            <a href="/podcast" class="text-brandGreen font-semibold hover:text-green-700">Listen Now ‚Üí</a>
          </div>
        </div>
        
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
          <div class="p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-2">Articles</h3>
            <p class="text-gray-600 mb-4">In-depth articles from my Medium blog covering analytics, data strategy, and leadership insights.</p>
            <a href="/articles" class="text-brandGreen font-semibold hover:text-green-700">Read Articles ‚Üí</a>
          </div>
        </div>
        
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
          <div class="p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-2">Tools & Downloads</h3>
            <p class="text-gray-600 mb-4">Free resources, templates, and frameworks to accelerate your data journey.</p>
            <a href="/tools" class="text-brandGreen font-semibold hover:text-green-700">Get Resources ‚Üí</a>
          </div>
        </div>
      </div>
    </div>
  </section>  <!-- Newsletter Section - Rebel Edition -->
  <section class="py-20 bg-gradient-to-br from-brandGreen via-blue-600 to-purple-600 text-white relative overflow-hidden">
    <!-- Background elements -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-10 right-10 w-24 h-24 bg-brandGold rounded-full transform rotate-45"></div>
      <div class="absolute bottom-10 left-10 w-32 h-32 bg-white rounded-full transform -rotate-12"></div>
      <div class="absolute top-1/2 left-1/2 w-20 h-20 bg-pink-400 rounded-full transform -translate-x-1/2 -translate-y-1/2 rotate-45"></div>
    </div>
    
    <div class="container mx-auto px-6 text-center relative z-10">
      <h2 class="text-4xl md:text-5xl font-black mb-4">
        <span class="inline-block transform -rotate-1 bg-brandGold px-6 py-3 text-gray-900 rounded-xl shadow-2xl">
          Blaze the Trail Forward
        </span>
      </h2>
      <p class="text-xl md:text-2xl mb-8 max-w-2xl mx-auto leading-relaxed">
        Get weekly doses of trailblazing insights, innovative tools, and career-boosting tips.
        <br />
        <span class="text-brandGold font-semibold">No boring corporate newsletters here!</span>
      </p>
      <div class="max-w-md mx-auto">
        <NewsletterSignup 
          title="Blaze the Trail Forward"
          description="Get weekly doses of trailblazing insights, innovative tools, and career-boosting tips. No boring corporate newsletters here!"
          leadMagnet="Free Download: Analytics ROI Calculator + 5 Data Strategy Templates"
          variant="inline"
        />
      </div>
    </div>
  </section>

  <Footer />
</Base>

<script>
  // Random Insight Button Functionality
  document.addEventListener('DOMContentLoaded', function() {
    const randomBtn = document.getElementById('random-insight-btn');
    
    // Array of popular blog posts and insights
    const insights = [
      '/blog/data-transformation-journey',
      '/blog/analytics-automation-guide',
      '/blog/bi-dashboard-best-practices',
      '/tags',
      '/downloads',
      '/tools',
      '/podcast',
      '/articles'
    ];
    
    if (randomBtn) {
      randomBtn.addEventListener('click', function() {
        // Add some fun animation
        randomBtn.style.transform = 'scale(0.95)';
        randomBtn.textContent = 'üé≤ Loading magic...';
        
        setTimeout(() => {
          const randomInsight = insights[Math.floor(Math.random() * insights.length)];
          window.location.href = randomInsight;
        }, 800);
      });
    }
  });
</script>
