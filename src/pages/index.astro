---
import Base from '../layouts/Base.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.jsx';
import { getCollection } from 'astro:content';
import CaseStudyCard from '../components/CaseStudyCard.jsx';
import NewsletterSignup from '../components/NewsletterSignup.jsx';
import OptimizedImage from '../components/OptimizedImage.astro';

const base = import.meta.env.BASE_URL;

const caseStudies = await getCollection('caseStudies');

// SEO meta data with structured data
const seoData = {
  title: "Trailblazer Analytics - Where Data Strategy Meets Action",
  description: "Transform your business with expert data strategy, analytics implementation, and AI innovation. Get actionable insights, not just reports. Download free tools and connect with Alexander Nykolaiszyn.",
  image: "/og-image-home.png",
  schemaType: "WebSite",
  canonicalUrl: "/"
};
---

<Base {...seoData}>
  <Navbar />
  
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 text-white min-h-screen flex items-center">
    <div class="absolute inset-0 bg-black opacity-50"></div>
    <div class="container mx-auto px-6 relative z-10">      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-5xl md:text-7xl font-bold mb-6">
          Data Insights & Tools
          <span class="text-brandGold block">For Analytics Professionals</span>
        </h1>
        <p class="text-xl md:text-2xl mb-8 text-gray-300 max-w-3xl mx-auto">
          In-depth articles, practical tools, and strategic frameworks to advance your data and analytics career.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href={base + '/insights'} class="bg-brandGold hover:bg-yellow-600 text-black font-semibold py-4 px-8 rounded-lg transition-colors">
            Read Latest Articles
          </a>
          <a href={base + '/tools'} class="border-2 border-brandGold text-brandGold hover:bg-brandGold hover:text-black font-semibold py-4 px-8 rounded-lg transition-colors">
            Explore Tools
          </a>
        </div>
      </div>
    </div>
  </section>
  <!-- Value Proposition Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">Your Data Career Advancement Hub</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Deep insights, practical tools, and strategic frameworks to help you excel in the rapidly evolving world of data and analytics.
        </p>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
          <div class="p-6">
            <div class="w-16 h-16 bg-brandGreen rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">In-Depth Articles</h3>
            <p class="text-gray-600 mb-4">Weekly insights on data strategy, analytics trends, and career advancement from a practicing professional.</p>
            <a href={base + '/insights'} class="text-brandGreen font-semibold hover:text-green-700">Read Articles →</a>
          </div>
        </div>
        
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
          <div class="p-6">
            <div class="w-16 h-16 bg-brandGreen rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Practical Tools</h3>
            <p class="text-gray-600 mb-4">Ready-to-use calculators, frameworks, and templates that solve real analytics challenges.</p>
            <a href={base + '/tools'} class="text-brandGreen font-semibold hover:text-green-700">Explore Tools →</a>
          </div>
        </div>
        
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
          <div class="p-6">
            <div class="w-16 h-16 bg-brandGreen rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Podcast Discussions</h3>
            <p class="text-gray-600 mb-4">Deep conversations with data leaders about trends, challenges, and career insights.</p>
            <a href={base + '/podcast'} class="text-brandGreen font-semibold hover:text-green-700">Listen Now →</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Content Section -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">Latest Insights & Resources</h2>
        <p class="text-xl text-gray-600">Stay ahead with expert analysis, tools, and strategies.</p>
      </div>
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
          <div class="p-6">            <h3 class="text-xl font-bold text-gray-900 mb-2">Insights</h3>
            <p class="text-gray-600 mb-4">Expert analysis on data trends, technology, and business strategy.</p>
            <a href={`${base}/insights`} class="text-brandGreen font-semibold hover:text-green-700">Explore Insights →</a>
          </div>
        </div>
        
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
          <div class="p-6">            <h3 class="text-xl font-bold text-gray-900 mb-2">Podcast</h3>
            <p class="text-gray-600 mb-4">Conversations with data leaders and industry innovators.</p>
            <a href={`${base}/podcast`} class="text-brandGreen font-semibold hover:text-green-700">Listen Now →</a>
          </div>
        </div>
        
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
          <div class="p-6">            <h3 class="text-xl font-bold text-gray-900 mb-2">Tech Notes</h3>
            <p class="text-gray-600 mb-4">Technical tutorials, code snippets, and developer resources.</p>
            <a href={`${base}/tech-notes`} class="text-brandGreen font-semibold hover:text-green-700">Browse Notes →</a>
          </div>
        </div>
        
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
          <div class="p-6">            <h3 class="text-xl font-bold text-gray-900 mb-2">Tools & Downloads</h3>
            <p class="text-gray-600 mb-4">Free resources, templates, and frameworks to accelerate your data journey.</p>
            <a href={`${base}/tools`} class="text-brandGreen font-semibold hover:text-green-700">Get Resources →</a>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- Newsletter Section -->
  <section class="py-20 bg-brandGreen text-white">
    <div class="container mx-auto px-6 text-center">
      <h2 class="text-4xl font-bold mb-4">Stay Ahead of the Data Curve</h2>
      <p class="text-xl mb-8 max-w-2xl mx-auto">
        Get weekly insights, tool updates, and career tips delivered to your inbox.
      </p>
      <div class="max-w-md mx-auto">
        <NewsletterSignup 
          placeholder="Enter your email for weekly insights"
          buttonText="Subscribe"
          source="homepage-cta"
        />
      </div>
    </div>
  </section>

  <Footer />
</Base>
