---
import Base from '../layouts/Base.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.jsx';
import BlogPostCard from '../components/BlogPostCard.jsx';
---

<Base>
  <Navbar />
  
  <section class="container mx-auto py-16 text-center">
    <h1 class="text-4xl font-extrabold text-brandGreen mb-4">Resources</h1>
    <p class="max-w-2xl mx-auto text-lg mb-8">Free downloads, guides, and tools to help you succeed with BI and analytics. Browse our growing resource library below.</p>
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3 mt-10">
      <!-- Redirect users to the new sections -->
      <div class="bg-white rounded-lg shadow-lg p-6 border border-gray-200">
        <h3 class="text-xl font-bold text-gray-900 mb-4">Downloads</h3>
        <p class="text-gray-600 mb-4">Free templates, guides, and frameworks</p>
        <a href="/downloads" class="text-brandGreen font-semibold hover:text-green-700">Browse Downloads →</a>
      </div>
      
      <div class="bg-white rounded-lg shadow-lg p-6 border border-gray-200">
        <h3 class="text-xl font-bold text-gray-900 mb-4">Tools & Software</h3>
        <p class="text-gray-600 mb-4">Analytics tools and software solutions</p>
        <a href="/tools" class="text-brandGreen font-semibold hover:text-green-700">Explore Tools →</a>
      </div>
      
      <div class="bg-white rounded-lg shadow-lg p-6 border border-gray-200">
        <h3 class="text-xl font-bold text-gray-900 mb-4">White Papers</h3>
        <p class="text-gray-600 mb-4">In-depth research and strategic insights</p>
        <a href="/white-papers" class="text-brandGreen font-semibold hover:text-green-700">Read Papers →</a>
      </div>
    </div>
  </section>
  
  <Footer />
</Base>
