---
import { getCollection } from 'astro:content';
import Base from '../layouts/Base.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.jsx';

// Get all resource collections
const downloads = await getCollection('downloads');
const tools = await getCollection('tools');
const whitepapers = await getCollection('whitepapers');
const caseStudies = await getCollection('case-studies');

// SEO data
const seoData = {
  title: "Resources - Trailblazer Analytics Tools, Downloads & Research",
  description: "Comprehensive collection of free analytics tools, white papers, case studies, and downloadable resources for data trailblazers and business leaders. Find everything by topic!",
  image: "/og-image-resources.png"
};
---

<Base {...seoData}>
  <Navbar />
    <!-- Header Section -->
  <section class="bg-gradient-to-br from-gray-900 via-purple-900 to-blue-900 text-white py-20 relative overflow-hidden">
    <!-- Creative Background Elements -->
    <div class="absolute inset-0 opacity-20">
      <div class="absolute top-16 right-16 w-20 h-20 bg-brandGold rounded-full transform rotate-45 animate-pulse"></div>
      <div class="absolute bottom-16 left-16 w-16 h-16 bg-brandGreen rounded-full transform -rotate-12 animate-bounce"></div>
