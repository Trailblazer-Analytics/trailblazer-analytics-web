---
import Base from '../layouts/Base.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.jsx';
import OptimizedImage from '../components/OptimizedImage.astro';
const base = import.meta.env.BASE_URL;

// SEO meta data
const seoData = {
  title: "About Alexander Nykolaiszyn - Data Strategy & Analytics Leadership",
  description: "Learn about Alexander Nykolaiszyn, a data analytics leader with over 15 years experience transforming businesses through data-driven insights, BI strategy, and analytics innovation.",
  image: "/og-image-about.png",
  schemaType: "Person"
};

// Professional experience
const experience = [
  {
    title: "Manager, Business Insights",
    company: "Lennar Corporation",
    period: "2020 - Present",
    description: "Leading data strategy and analytics initiatives for the nation's largest homebuilder. Transforming business processes through insights-driven automation and strategic BI implementations."
  },
  {
    title: "Senior Analytics Consultant",
    company: "Data Strategy Partners",
    period: "2017 - 2020",
    description: "Provided data strategy consulting for Fortune 500 clients across healthcare, finance, and retail sectors. Specialized in analytics roadmaps, data governance frameworks, and BI platform selection."
  },
  {
    title: "Business Intelligence Architect",
    company: "Global Technologies Inc.",
    period: "2013 - 2017",
    description: "Designed and implemented enterprise-wide analytics solutions. Led data transformation initiatives resulting in 45% improvement in reporting efficiency and 37% cost reduction."
  },
  {
    title: "Data Analyst",
    company: "MetricStream Solutions",
    period: "2010 - 2013",
    description: "Developed KPI dashboards and analytical models for operational performance tracking. Specialized in predictive analytics and statistical modeling."
  }
];

// Education and certifications
const education = [
  {
    degree: "Master of Science in Business Analytics",
    institution: "University of Florida",
    year: "2014"
  },
  {
    degree: "Bachelor of Science in Information Systems",
    institution: "Florida State University",
    year: "2009"
  }
];

const certifications = [
  {
    name: "Microsoft Certified: Azure Data Scientist Associate",
    year: "2023"
  },
  {
    name: "Tableau Certified Data Analyst",
    year: "2022"
  },
  {
    name: "AWS Certified Data Analytics - Specialty",
    year: "2021"
  },
  {
    name: "Google Analytics Individual Qualification",
    year: "2020"
  }
];

// Areas of expertise
const expertise = [
  {
    area: "Data Strategy & Governance",
    skills: ["Data maturity assessments", "Strategy roadmapping", "Data governance frameworks", "ROI measurement"]
  },
  {
    area: "Business Intelligence",
    skills: ["Dashboard development", "ETL processes", "KPI definition", "Self-service analytics"]
  },
  {
    area: "Advanced Analytics",
    skills: ["Predictive modeling", "Machine learning", "Forecasting", "Segmentation analysis"]
  },
  {
    area: "Technology Implementation",
    skills: ["Tableau", "Power BI", "SQL", "Python", "R", "Azure", "AWS"]
  }
];
---

<Base {...seoData}>
  <Navbar />
  
  <!-- Header Section -->
  <section class="bg-gradient-to-br from-gray-900 to-gray-800 text-white py-20">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-5xl md:text-6xl font-bold mb-6">
          About <span class="text-brandGold">Alexander</span>
        </h1>
        <p class="text-xl md:text-2xl text-gray-300 mb-8">
          Data analytics leader with a passion for transforming businesses through data-driven insights and strategic implementations.
        </p>
      </div>
    </div>
  </section>

  <!-- Bio Section -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto">
        <div class="flex flex-col md:flex-row gap-12 items-center md:items-start">          <div class="md:w-1/3">
            <OptimizedImage 
              src="/images/alexander-profile.jpg" 
              alt="Alexander Nykolaiszyn - Data Strategy Professional"
              width={400}
              height={500} 
              class="rounded-lg shadow-xl w-full max-w-xs mx-auto"
              loading="eager"
            />
            
            <div class="mt-8 space-y-4">
              <a 
                href="https://www.linkedin.com/in/alexandernykolaiszyn" 
                target="_blank" 
                rel="noopener noreferrer"
                class="flex items-center gap-2 text-gray-700 hover:text-brandGreen transition-colors"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                </svg>
                LinkedIn
              </a>
              
              <a 
                href="https://medium.com/@alexander.nykolaiszyn" 
                target="_blank" 
                rel="noopener noreferrer"
                class="flex items-center gap-2 text-gray-700 hover:text-brandGreen transition-colors"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M2.846 6.36c.03-.295-.083-.586-.303-.784l-2.24-2.7v-.403h6.958l5.378 11.795 4.728-11.795h6.633v.403l-1.916 1.837c-.165.126-.247.333-.213.538v13.498c-.034.204.048.411.213.537l1.871 1.837v.403h-9.412v-.403l1.939-1.882c.19-.19.19-.246.19-.537v-10.91l-5.389 13.688h-.728l-6.275-13.688v9.174c-.052.385.076.774.347 1.052l2.521 3.058v.404h-7.148v-.404l2.521-3.058c.27-.279.39-.67.325-1.052v-10.608z"/>
                </svg>
                Medium
              </a>
              
              <a 
                href="https://open.spotify.com/show/6OqrYng96bFqlhKKjeDhBx" 
                target="_blank" 
                rel="noopener noreferrer"
                class="flex items-center gap-2 text-gray-700 hover:text-brandGreen transition-colors"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.42 1.56-.299.421-1.02.599-1.559.3z"/>
                </svg>
                Podcast
              </a>
              
              <a 
                href="mailto:alexander@trailblazer-analytics.com" 
                class="flex items-center gap-2 text-gray-700 hover:text-brandGreen transition-colors"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
                </svg>
                Email
              </a>
            </div>
          </div>
          
          <div class="md:w-2/3">
            <h2 class="text-3xl font-bold text-gray-900 mb-6">Professional Background</h2>
            
            <div class="space-y-6 text-lg text-gray-700">
              <p>
                As the Manager of Business Insights at Lennar Corporation, I'm responsible for driving data strategy and analytics innovation across one of America's largest homebuilders. With over 15 years in the analytics space, I've developed expertise in transforming raw data into actionable business intelligence that drives strategic decision-making.
              </p>
              
              <p>
                My approach combines technical expertise with business acumen to deliver analytics solutions that create measurable value. I believe that effective data strategy isn't just about technologyâ€”it's about aligning analytics capabilities with business objectives and fostering a data-driven culture.
              </p>
              
              <p>
                Throughout my career, I've led initiatives that have resulted in millions in cost savings, revenue growth, and operational efficiencies for organizations across multiple industries. I'm particularly passionate about democratizing data access and empowering business users with self-service analytics capabilities.
              </p>
              
              <p>
                As host of the Data Trailblazer podcast, I interview industry leaders and share practical insights on building effective analytics programs. I'm also a regular contributor on Medium, where I write about data strategy, analytics implementation, and emerging trends in business intelligence.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Experience Section -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold text-gray-900 mb-10 text-center">Professional Experience</h2>
        
        <div class="space-y-8">
          {experience.map(job => (
            <div class="bg-white rounded-xl shadow-md p-8 hover:shadow-lg transition-shadow">
              <h3 class="text-xl font-bold text-gray-900">{job.title}</h3>
              <div class="flex items-center gap-4 mt-2 mb-4">
                <span class="text-brandGreen font-semibold">{job.company}</span>
                <span class="text-gray-500">{job.period}</span>
              </div>
              <p class="text-gray-700">{job.description}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>
  
  <!-- Education & Certifications -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold text-gray-900 mb-10 text-center">Education & Certifications</h2>
        
        <div class="grid md:grid-cols-2 gap-12">
          <div>
            <h3 class="text-2xl font-bold text-gray-900 mb-6">Education</h3>
            
            <div class="space-y-6">
              {education.map(edu => (
                <div class="bg-gray-50 rounded-lg p-6">
                  <h4 class="text-lg font-bold text-gray-900">{edu.degree}</h4>
                  <p class="text-brandGreen">{edu.institution}</p>
                  <p class="text-gray-600">{edu.year}</p>
                </div>
              ))}
            </div>
          </div>
          
          <div>
            <h3 class="text-2xl font-bold text-gray-900 mb-6">Certifications</h3>
            
            <div class="space-y-4">
              {certifications.map(cert => (
                <div class="bg-gray-50 rounded-lg p-6">
                  <h4 class="text-lg font-bold text-gray-900">{cert.name}</h4>
                  <p class="text-gray-600">{cert.year}</p>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Areas of Expertise -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold text-gray-900 mb-10 text-center">Areas of Expertise</h2>
        
        <div class="grid sm:grid-cols-2 gap-8">
          {expertise.map(exp => (
            <div class="bg-white rounded-xl shadow-md p-8 hover:shadow-lg transition-shadow">
              <h3 class="text-xl font-bold text-gray-900 mb-4">{exp.area}</h3>
              <ul class="space-y-2">
                {exp.skills.map(skill => (
                  <li class="flex items-start gap-2">
                    <svg class="w-5 h-5 text-brandGreen flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                    <span class="text-gray-700">{skill}</span>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>
  
  <!-- CTA Section -->
  <section class="py-16 bg-gradient-to-br from-gray-900 to-gray-800 text-white">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl font-bold mb-6">Want to connect?</h2>
        <p class="text-xl text-gray-300 mb-8">
          I'm always open to discussing data strategy, analytics implementation, or new opportunities.
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a 
            href="mailto:alexander@trailblazer-analytics.com" 
            class="bg-brandGold hover:bg-yellow-600 text-black font-semibold py-3 px-8 rounded-lg transition-colors"
          >
            Send an Email
          </a>
          <a 
            href="https://www.linkedin.com/in/alexandernykolaiszyn" 
            target="_blank" 
            rel="noopener noreferrer"
            class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-8 rounded-lg transition-colors"
          >
            Connect on LinkedIn
          </a>
        </div>
      </div>
    </div>
  </section>
  
  <Footer />
</Base>
