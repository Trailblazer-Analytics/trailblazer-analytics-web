{
  "name": "trailblazer-analytics",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "preinstall": "node scripts/enforce-pnpm.js",
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "check": "astro check",
    "lighthouse": "lhci autorun",
    "package:win": "pnpm run build && cd dist && powershell Compress-Archive -Path * -DestinationPath ../trailblazer-analytics-dist.zip -Force && cd ..",
    "package:unix": "pnpm run build && cd dist && zip -r ../trailblazer-analytics-dist.zip . && cd ..",
    "clean": "rmdir /s /q dist 2>nul || rm -rf dist",
    "typecheck": "astro check",
    "fix-warnings": "node scripts/fix-build-warnings.js",
    "verify-rss": "node scripts/verify-rss.js",
    "consolidate-docs": "node scripts/consolidate-docs.js",
    "organize-docs": "node scripts/organize-docs.js",
    "pre-build": "node scripts/pre-build.js",
    "lint:md": "markdownlint \"**/*.md\" --ignore node_modules",
    "fix:md": "markdownlint \"**/*.md\" --ignore node_modules --fix",
    "validate-content": "node scripts/validate-content.js",    "tags:build": "astro build && echo 'Tag pages generated successfully'",
    "tags:dev": "astro dev --host 0.0.0.0",
    "content:validate": "node scripts/pre-build.js",
    "deploy:preview": "pnpm run build && pnpm run preview",
    "deploy": "pnpm run build"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/mdx": "^4.2.6",
    "@astrojs/react": "^4.2.7",
    "@astrojs/rss": "^4.0.12",
    "astro": "^5.7.13",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "rss": "^1.2.2",
    "tailwindcss": "^3.4.2",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@astrojs/tailwind": "^6.0.2",
    "@lhci/cli": "^0.14.0",
    "autoprefixer": "10.4.15",
    "markdownlint-cli": "^0.45.0",
    "postcss": "8.4.38"
  }
}
